{
  "manifest_version": 3,
  "name": "notevana",
  "version": "1.0.0",
  "description": "Notevana: Elevate your stored thoughts, ideas, and info with a cool twist. Unleash creativity in a professional groove!",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "./notevana/dist/modal.html",
    "default_icon": {
      "16": "./notevana/images/updn-notes-icon.png",
      "48": "./notevana/images/updn-notes-icon.png",
      "128": "./notevana/images/updn-notes-icon.png"
    }
  },
  "background": {
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "**/*",
        "*"
      ],
      "use_dynamic_url": true
    }
  ]
}
